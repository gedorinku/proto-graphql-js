{
  "name": "protoc-gen-nexus",
  "version": "0.0.1",
  "description": "Generate DSL for GraphQL Nexus from Protocol Buffers IDL",
  "bin": {
    "protoc-gen-nexus": "./bin/protoc-gen-nexus"
  },
  "repository": "git@github.com:izumin5210/protoc-gen-nexus.git",
  "author": "izumin5210 <m@izum.in>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "frolint": "^2.0.1",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@types/google-protobuf": "^3.7.2",
    "google-protobuf": "^3.12.2"
  },
  "scripts": {
    "build": "tsc --build .",
    "generate:fixtures": "protoc -I ./src/__fixtures__ --include_source_info --include_imports --descriptor_set_out=./src/__fixtures__/fixtures.protoset $(find ./src/__fixtures__ -name '*.proto')",
    "lint": "frolint --branch master --bail",
    "pretest": "yarn generate:fixtures",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": [
      "wantedly-typescript"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "import/no-default-export": "error"
    }
  }
}

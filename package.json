{
  "private": true,
  "workspaces": ["packages/*", "packages/@testapis/*"],
  "scripts": {
    "build": "yarn build:protoc-gen-nexus && yarn build:testapis",
    "build:protoc-gen-nexus": "yarn workspace protoc-gen-nexus build",
    "build:testapis": "yarn run build:testapis:proto && yarn run build:testapis:nexus",
    "build:testapis:nexus": "yarn workspace @testapis/nexus build",
    "build:testapis:proto": "yarn workspace @testapis/proto build",
    "lint": "yarn workspace protoc-gen-nexus lint",
    "test": "yarn workspace protoc-gen-nexus test"
  },
  "eslintConfig": {
    "extends": [
      "wantedly-typescript"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "import/no-default-export": "error",
      "eqeqeq": ["error", "smart"]
    }
  }
}
